<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pedidos.PedidosFragment">

    <TextView
        android:id="@+id/text_top_fixed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:text="MEUS PEDIDOS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="16dp"
        android:id="@+id/rv_pedido_feito"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/ln_bottom_finalizar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_top_fixed"
        tools:listitem="@layout/pedido_item" />
    <LinearLayout
        android:id="@+id/ln_bottom_finalizar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="Total com a entrega"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_weight="0.5"
                android:textSize="16sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_total_pedido"
                android:layout_width="match_parent"
                android:text="R$ 16,98"
                android:textStyle="bold"
                android:layout_weight="0.5"
                android:textColor="@color/black"
                android:gravity="end"
                android:textSize="16sp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_finalizar_tudo"
            android:backgroundTint="@color/green_shopper"
            android:text="Finalizar pedido"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        tools:visibility="gone"
        android:id="@+id/ln_img_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="?attr/actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_top_fixed">

        <ImageView
            android:id="@+id/img_dragon"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/comer" />

        <TextView
            android:id="@+id/fixed_nenhum_pedido"
            android:layout_width="wrap_content"
            android:fontFamily="@font/newrepublic"
            android:layout_height="wrap_content"
            android:text="Nenhum pedido feito :("
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fixed_bottom_pedidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Experimente pedir alguma comida, uma pizza, coxinha ou hambÃºrguer, que tal?"
            android:textAlignment="center" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>