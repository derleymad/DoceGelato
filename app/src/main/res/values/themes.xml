<resources>
    <!-- Base application theme. -->
    <style name="Theme.DoceGelato" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/light_red</item>
        <item name="colorAccent">@color/green_shopper</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DoceGelato.Splash" parent="Theme.DoceGelato">
        <item name="android:statusBarColor">@color/green_shopper</item>
    </style>

    <style name="CustomTabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/nunito</item>
    </style>

    <style name="StatusbarBlack" parent="Theme.DoceGelato">
        <item name="android:statusBarColor">@color/black</item>
    </style>

</resources>